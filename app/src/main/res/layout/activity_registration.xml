<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="#C3BFB4"
    tools:context=".RegisterationActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:elevation="20dp"
                app:cardCornerRadius="8dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="#FFEB3B"
                    android:background="#D52222"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textSize="20dp"
                    android:text="Registration"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:elevation="20dp"
                app:cardCornerRadius="10dp"
                android:layout_margin="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#000000"
                            android:textStyle="bold"
                            android:text="Passenger Name :"/>
                        <EditText
                            android:id="@+id/et_passengerName"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:inputType="textPersonName"
                            android:hint="Enter passenger name"
                            android:textColorHint="#272629"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#000000"
                            android:textStyle="bold"
                            android:text="Passenger Type :"/>



                        <Spinner
                            android:id="@+id/spinner"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginBottom="10dp"
                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#000000"
                            android:textStyle="bold"
                            android:text="Address :"/>
                        <EditText
                            android:id="@+id/et_address"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="Enter here"
                            android:inputType="textMultiLine"
                            android:textColorHint="#272629"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#000000"
                            android:textStyle="bold"
                            android:text="Email Id :"/>
                        <EditText
                            android:id="@+id/et_emailId"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="Enter here"
                            android:inputType="textEmailAddress"
                            android:textColorHint="#272629"/>



                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Contact No1 :"
                            android:textColor="#000000"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/et_contactNo1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="Enter here"
                            android:inputType="number"
                            android:textColorHint="#272629"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#000000"
                            android:textStyle="bold"
                            android:text="Contact No2 :"/>
                        <EditText
                            android:id="@+id/et_contactNo2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="Enter here"
                            android:inputType="number"
                            android:textColorHint="#272629"/>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Birth Date :"
                                android:textStyle="bold"
                                android:textColor="#000000"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="2"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tv_birthdate"
                                    android:layout_width="150dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:textColor="#000000"/>

                                <Button
                                    android:layout_marginLeft="10dp"
                                    android:id="@+id/btnDateBrowse"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAllCaps="false"
                                    android:text="Pick up date"/>

                            </LinearLayout>
                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Gender :"
                            android:textStyle="bold"
                            android:textColor="#000000"/>

                        <RadioGroup
                            android:id="@+id/rg_radioGroup"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:orientation="horizontal">
                            <RadioButton
                                android:id="@+id/rg_radioGroupMale"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="60dp"
                                android:text="Male"/>
                            <RadioButton
                                android:id="@+id/rg_radioGroupFemale"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="Female"/>

                        </RadioGroup>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Profile Photo :"
                                android:textStyle="bold"
                                android:textColor="#000000"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="2"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tv_profilePicPath"
                                    android:layout_width="150dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:textColor="#000000"/>

                                <Button
                                    android:layout_marginLeft="10dp"
                                    android:id="@+id/btnPhotoPathBrowse"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAllCaps="false"
                                    android:text="Browse"/>

                            </LinearLayout>
                        </LinearLayout>


                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:elevation="20dp"
                            app:cardBackgroundColor="#D52222"
                            app:cardCornerRadius="10dp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="2dp"
                                android:background="#F5F4F6"
                                android:padding="5dp"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="#000000"
                                    android:textStyle="bold"
                                    android:text="Username :"/>
                                <EditText
                                    android:id="@+id/et_username"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:hint="Enter here"
                                    android:inputType="text"
                                    android:textColorHint="#272629"/>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="#000000"
                                    android:textStyle="bold"
                                    android:text="Password :"/>
                                <EditText
                                    android:id="@+id/et_password"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:hint="Enter here"
                                    android:inputType="textPassword"
                                    android:textColorHint="#272629"/>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="#000000"
                                    android:textStyle="bold"
                                    android:text="Re-Enter Password :"/>
                                <EditText
                                    android:id="@+id/et_rePassword"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:hint="Enter here"
                                    android:inputType="textPassword"
                                    android:textColorHint="#272629"/>

                            </LinearLayout>
                        </androidx.cardview.widget.CardView>



                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:elevation="20dp"
                            android:layout_marginBottom="30dp"
                            android:layout_marginTop="10dp"
                            app:cardCornerRadius="10dp">
                            <Button
                                android:id="@+id/btnRegister"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:textColor="#FFEB3B"
                                android:background="#D52222"
                                android:textStyle="bold"
                                android:text="Register now"/>
                        </androidx.cardview.widget.CardView>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:id="@+id/txtLogin"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="220dp"
                                android:layout_height="wrap_content"
                                android:text="Already Register?? Login here..."
                                android:textColor="#000000"
                                android:textStyle="bold"/>
                            <View
                                android:layout_width="200dp"
                                android:layout_height="1dp"
                                android:background="#EE0014"/>
                        </LinearLayout>
                    </LinearLayout>
            </androidx.cardview.widget.CardView>


        </LinearLayout>
    </ScrollView>








</LinearLayout>